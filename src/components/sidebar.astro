---
import styles from "./sidebar.module.scss";
import Icon from "astro-icon";
import { IconOnlyButton } from "./button";

interface SidebarProps {
  sidebarId: string;
  closeId: string;
}

const { sidebarId, closeId } = Astro.props as SidebarProps;
---

<div id={sidebarId} class={styles.container}>
  <div class={styles.mobileHeader}>
    <div class={`${styles.halfContainers}`} id={closeId} }>
      <IconOnlyButton variant="secondary">
        <Icon name="mdi:close" height="100%" width="100%" />
      </IconOnlyButton>
    </div>
    <img class={styles.centerLogo} src="/images/RIP Wallet Logo.png" alt="" />
    <div class={`${styles.halfContainers}`}>
      <div class={styles.spacer}></div>
      <IconOnlyButton variant="secondary">
        <Icon name="mdi:calendar" height="100%" width="100%" />
      </IconOnlyButton>
    </div>
  </div>
  <p>Hi</p>
</div>
